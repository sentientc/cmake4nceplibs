#!/bin/tcsh
set pwd = `pwd`
setenv FV3_GFS_SRC $pwd:h:h:h/FV3GFS_SRC/
setenv updates $pwd:h:h:h/updates_sst
set exed = $pwd/bin
source ../../site/env.cshrc
mkdir -p $exed

## make non-hydrostatic prod 64bit
#  set type = "nh"
