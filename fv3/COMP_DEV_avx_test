# make non-hydrostatic prod 32bit
  set type = "nh"
  set comp = "prod"
  set bit  = "64bit"
  set avx  = "Y"
  echo "  building ${type} ${comp} ${bit} \t `date`"
    ./mk_paths ${bit}                         > & build_${type}_${comp}.${bit}_sst.out
    ./mk_makefile_updates ${type} ${bit} clean       >> & build_${type}_${comp}.${bit}_sst.out
    ./mk_make ${comp} ${bit} ${avx} clean    >> & build_${type}_${comp}.${bit}_sst.out
    mv -f exec/test.x $exed/fv3_gfs_${type}.${comp}.${bit}.x

