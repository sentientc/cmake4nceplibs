#!/usr/bin/env bash
set -x

${PROJECT_SOURCE_DIR}/netcdf-c/configure \
    --disable-dap\
    CC=${MPI_C_COMPILER} \
    CXX=${MPI_CXX_COMPILER} \
    --prefix=${CMAKE_INSTALL_PREFIX} \
    --libdir=${CMAKE_INSTALL_PREFIX}/${CMAKE_INSTALL_LIBDIR} \
    --enable-pnetcdf \
    --enable-parallel4 \
    CPPFLAGS="-I${CMAKE_INSTALL_PREFIX}/${CMAKE_INSTALL_INCLUDEDIR}" \
    LDFLAGS="-L${CMAKE_INSTALL_PREFIX}/${CMAKE_INSTALL_LIBDIR}" \
    LIBS="-lnetcdf -lhdf5_hl -lhdf5 -lsz -lz -ldl /opt/ohpc/pkg/rcec/pkg/gcc/9.3.0/lib/libbsd.so"
